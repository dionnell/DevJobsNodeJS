<main class="contenedor">

    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre: </label>
            <input type="text" name="nombre" value="{{usuario.nombre}}" placeholder="Tu nombre" required>
        </div>
        <div class="campo">
            <label>Email: </label>
            <input type="email" name="email" value={{usuario.email}} placeholder="Tu Email" required>
        </div>
        <div class="campo">
            <label>Password: </label>
            <input type="password" name="password" placeholder="Tu Password" >
        </div>
        <div class="campo">
            <label>Imagen de Perfil: </label>
            <input type="file" name="imagen" placeholder="Tu Imagen de Perfil" >
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>

</main>