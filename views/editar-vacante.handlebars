<main class="contenedor">

    <form action="/vacantes/editar/{{vacante.url}}" method="POST"  class="default-form">
        <h3>Informacion General</h3>   

        <div class="campo">
            <label >Titulo: </label>
            <input type="text" value="{{vacante.titulo}}" name="titulo" placeholder="Ej: Dev Nodejs"  required>
        </div>

        <div class="campo">
            <label >Empresa: </label>
            <input type="text" value="{{vacante.empresa}}" name="empresa" placeholder="Ej: Emasa company" required>
        </div>

        <div class="campo">
            <label >Ubicacion: </label>
            <input type="text" value="{{vacante.ubicacion}}" name="ubicacion" placeholder="Ej: Francia o Remoto" required>
        </div>

        <div class="campo">
            <label >Salario: </label>
            <input type="text" value="{{vacante.salario}}" name="salario" placeholder="Ej: $3.500" required>
        </div>

        <div class="campo">
            <label >Contrato: </label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>--Selecciona--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
    
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion: </label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>

        </div>

        <h3>Conocimiento</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">

        </div>

    </form>

</main>